{
  "manifest_version": 3,
  "name": "My Extension",
  "version": "1.0",
  "description": "Honours Project",
  "background": {
    "service": {
      "scripts": ["background.js"],
      "type": "service_worker",
      "persistent": true
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "https://www.googleapis.com/",
    "webRequest",
    "*://amazon.com/*",
    "*://youtube.com/*",
    "webRequestBlocking"
  ],

  "action": {
    "default_icon": "images/zi.png",
    "default_title": "My Extension",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/zi.png"

  }


}
